<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
	<TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
	<RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

	<PropertyGroup>
		<!--<CsWinRTEmbedded>true</CsWinRTEmbedded>-->
		<!--<CsWinRTWindowsMetadata>sdk</CsWinRTWindowsMetadata>-->
		<!--<CsWinRTGenerateProjection>true</CsWinRTGenerateProjection>-->
		<!--<CsWinRTIncludes>
			winrtcomponent_cpp;
			Windows.Foundation;
		</CsWinRTIncludes>
		<CsWinRTExcludes>
			Windows.Foundation.Diagnostics;
			Windows.Foundation.PropertyType;
		</CsWinRTExcludes>-->
		<!--<CsWinRTEnableLogging>true</CsWinRTEnableLogging>-->
		<PlatformTarget>x64</PlatformTarget>
		<ApplicationManifest>wpftest.exe.manifest</ApplicationManifest>

		<CsWinRTParams>
			-input 10.0.19041.0
			-input "$(BuildOutDir)..\..\x64\$(Configuration)\winrtcomponent.cpp\bin\winrtcomponent.cpp\winrtcomponent_cpp.winmd"
			-output "$(IntermediateOutputPath)\net8.0-windows10.0.19041.0\win-x64\Generated Files\CsWinRT"
			-include winrtcomponent_cpp
		</CsWinRTParams>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.7" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\winrtcomponent.cpp\winrtcomponent.cpp.vcxproj" />
	</ItemGroup>

</Project>
